{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake",
            "type": "shell",
            "command": "cmake",
            "windows": {
                "command": "cmake",
                "args": [
                    "${workspaceFolder}",
                    "-G",
                    "MinGW Makefiles"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "args": [
                "${workspaceFolder}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "buildKlasorOlustur"
            ],
        },
        {
            "label": "buildKlasorOlustur",
            "type": "shell",
            "windows": {
                "command": "powershell New-Item build -type directory -force",
            },
            "options": {
                "cwd": "${workspaceFolder}/"
            }
        },
        {
            "label": "Make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "mingW32-make",
            "args": [
                "-l"
            ]
        }
    ]
}